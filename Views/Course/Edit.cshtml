@model CourseWithDepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">
                <i class="bi bi-plus-circle"></i> Edit Course
            </h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control"
                               placeholder="Enter course name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DepartmentId" class="form-label"></label>
                        <select asp-for="DepartmentId" asp-items="Model.DepartmentList"
                                class="form-select">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-4 mb-3">
                        <label asp-for="Degree" class="form-label"></label>
                        <input asp-for="Degree" type="number" class="form-control"
                               placeholder="Enter degree" min="0" max="100" />
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="MinDegree" class="form-label"></label>
                        <input asp-for="MinDegree" type="number" class="form-control"
                                placeholder="Enter minimum degree" min="0" max="100" />
                        <span asp-validation-for="MinDegree" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Hours" class="form-label"></label>
                        <input asp-for="Hours" type="number" class="form-control"
                               placeholder="Enter hours" min="1" />
                        <span asp-validation-for="Hours" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Save Course
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

