@model List<Course>
@{
    ViewData["Title"] = "Courses";
}


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Course
    </a>
    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="search" class="form-control me-2"
               placeholder="Search by course name..."
               value="@ViewBag.CurrentSearch" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Search
        </button>
        @if (!string.IsNullOrWhiteSpace(ViewBag.CurrentSearch))
        {
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        }
    </form>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Degree</th>
                    <th>Hours</th>
                    <th>Min Degree</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Degree</td>
                        <td>@item.Hours</td>
                        <td>@item.MinDegree</td>
                        <td>@(item.Department?.Name ?? "—")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning btn-sm" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger btn-sm" title="Delete"
                                   onclick="return confirm('Are you sure you want to delete @item.Name?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i>
        @if (!string.IsNullOrWhiteSpace(ViewBag.CurrentSearch))
        {
            <span>No courses found matching "@ViewBag.CurrentSearch".</span>
        }
        else
        {
            <span>No courses available. <a asp-action="Create">Add your first course</a>.</span>
        }
    </div>
}