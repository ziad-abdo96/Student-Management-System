@model CourseWithDepartmentViewModel
@{
    ViewData["Title"] = "Create";
    SelectList selectListItems = new SelectList(Model.Departments, "Id", "Name");
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">Add New Course</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Degree" class="form-label"></label>
                    <input asp-for="Degree" class="form-control" placeholder="Enter degree" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Hours" class="form-label"></label>
                    <input asp-for="Hours" class="form-control" placeholder="Enter course hours" />
                    <span asp-validation-for="Hours" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinDegree" class="form-label"></label>
                    <input asp-for="MinDegree" class="form-control" placeholder="Enter MinDegree">
                    <span asp-validation-for="MinDegree"  class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" asp-items="selectListItems" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
