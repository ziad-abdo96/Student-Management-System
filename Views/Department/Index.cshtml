
@model List<Department>

@{
    ViewData["Title"] = "Department Index";
    Layout = "_Layout";
}


<h1>Index</h1>

<a href="/Department/Add" class="btn btn-success my-3"> New</a> 
<table class="table table-hover table-bordered">
    <tr>
        <th>No.</th>
        <th>Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/department/edit?id=@item.Id>" class="">Edit</a></td>
        </tr>
    }
</table>
