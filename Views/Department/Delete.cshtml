@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container my-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h3>
                <i class="bi bi-exclamation-triangle-fill"></i> Delete Department
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle-fill"></i>
                <strong>Warning!</strong> Are you sure you want to delete this trainee? This action cannot be undone.
            </div>
            <div class="row mb-3">
                <div class="col-md-3 fw-bold">Name:</div>
                <div class="col-md-9">@Model.Name</div>
            </div>
            @if(!string.IsNullOrWhiteSpace(Model.ManagerName))
            {
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Manager:</div>
                    <div class="col-md-9">@Model.ManagerName</div>
                </div>
            }
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
