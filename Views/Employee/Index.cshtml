@model List<Employee>
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if(TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Employee
    </a>

    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="search" class="form-control me-2"
               placeholder="Search by employee name..."
               value="@ViewBag.CurrentSearch" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Search
        </button>
        @if (!string.IsNullOrWhiteSpace(ViewBag.CurrentSearch))
        {
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        }
    </form>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">
        <i class="bi bi-exclamation-triangle"></i>
        @if (!string.IsNullOrWhiteSpace(ViewBag.CurrentSearch))
        {
            <span>No employees found matching "@ViewBag.CurrentSearch".</span>
        }
        else
        {
            <span>No employees available. <a asp-action="Create">Add your first employee</a>.</span>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th>Address</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>$@employee.Salary.ToString("N2")</td>
                        <td>@employee.JobTitle</td>
                        <td>@employee.Department?.Name</td>
                        <td>@(employee.Address ?? "—")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(employee.ImageURL))
                            {
                                <img src="@employee.ImageURL" alt="@employee.Name"
                                     class="img-thumbnail"
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@employee.Id"
                                   class="btn btn-warning btn-sm" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@employee.Id"
                                      method="post" style="display: inline;"
                                      onsubmit="return confirm('Are you sure you want to delete @employee.Name?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}