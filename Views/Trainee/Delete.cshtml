@model Trainee
@{
    ViewData["Title"] = "Delete Trainee";
}

<div class="container mb-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h3>
                <i class="bi bi-exclamation-triangle-fill"></i> Delete Trainee
            </h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle-fill"></i>
                <strong>Warning!</strong> Are you sure you want to delete this trainee? This action cannot be undone.
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold">Name:</div>
                <div class="col-md-9">@Model.Name</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Grade))
            {
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Grade:</div>
                    <div class="col-md-9">@Model.Grade</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Address))
            {
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Address:</div>
                    <div class="col-md-9">@Model.Address</div>
                </div>
            }

            @if (Model.Department != null)
            {
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Department:</div>
                    <div class="col-md-9">@Model.Department.Name</div>
                </div>
            }

            <hr class="my-4" />

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>