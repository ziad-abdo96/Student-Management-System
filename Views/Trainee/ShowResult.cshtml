@model TraineeCourseResultViewModel

@{
    ViewData["Title"] = "Trainee Result";
}

<div class="container mt-5">

    <div class="card shadow-lg">
        <div class="card-header text-white"
             style="background-color:@Model.Color;">
            <h3 class="m-0">Course Result</h3>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5 class="text-muted">Trainee Name:</h5>
                    <p class="fw-bold">@Model.TraineeName</p>
                </div>

                <div class="col-md-6">
                    <h5 class="text-muted">Course Name:</h5>
                    <p class="fw-bold">@Model.CourseName</p>
                </div>
            </div>

            <div class="row text-center">
                <div class="col-md-12">
                    <h4 class="mb-3">Degree</h4>

                    <span class="display-4 fw-bold"
                          style="color:@Model.Color;">
                        @Model.Degree
                    </span>

                    <p class="mt-3 fs-3 fw-semibold"
                       style="color:@Model.Color;">
                        @Model.States
                    </p>
                </div>
            </div>

        </div>
    </div>

</div>
